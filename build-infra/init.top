base:
  dom0:
    - build-infra.dom0
  {{ salt['pillar.get']('build-infra:build-template', 'fedora-28') }}:
    - build-infra.template-build
  {{ salt['pillar.get']('build-infra:keys-template', 'fedora-28-minimal') }}:
    - build-infra.template-keys
  build-logs:
    - build-infra.build-logs
{%- for env in salt['pillar.get']('build-infra:build-envs', []) %}
  keys-{{env}}:
    - build-infra.keys-vm
  build-{{env}}:
    - build-infra.build-vm
{%- endfor %}
